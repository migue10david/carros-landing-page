---
const images = [
  {
    src: "/images/212664-Havana.avif",
    alt: "Grupo de senderistas en montaña",
    class: "col-span-2 row-span-2",
  },
  {
    src: "/images/havana-tours/Capitanes-Generales-Palace.jpg",
    alt: "Guía profesional explicando ruta",
    class: "col-span-1 row-span-2",
  },
  {
    src: "/images/havana-tours/castillo-de-la-real-fuerza.jpg",
    alt: "Kayaking en lago cristalino",
    class: "col-span-2 row-span-1",
  },
  {
    src: "/images/havana-tours/plaza-de-armas.jpg",
    alt: "Escalada en roca natural",
    class: "col-span-1 row-span-1",
  },
  {
    src: "/images/havana-tours/puente-bacunayagua.jpg",
    alt: "Observación de vida silvestre",
    class: "col-span-3 row-span-1",
  },
];

import { getLangFromUrl, useTranslation } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslation(lang);

const features = [
  { text: t("first_characteristic") },
  { text: t("second_characteristic") },
  { text: t("third_characteristic") },
  { text: t("fourth_characteristic") },
  { text: t("fifth_characteristic") },
];
---

<section class="bg-white dark:bg-gray-900 py-6">
  <div class="container mx-auto px-4">
    <!-- Contenido principal -->
    <div class="grid lg:grid-cols-2 gap-10 items-center">
      <!-- Texto izquierdo -->
      <div class="space-y-6">
        <!-- Badge -->
        <span
          class="inline-block px-4 py-2 bg-gradient-to-r from-blue-500 to-cyan-600 text-white text-sm font-medium rounded-full"
        >
          {t("hero_bubble")}
        </span>

        <!-- Título -->
        <h1
          class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900 dark:text-white leading-tight"
        >
          {t("hero_title1")} <span class="text-blue-600 dark:text-blue-400">{t("cuba")}</span> {t("hero_title2")}
        </h1>

        <!-- Descripción -->
        <p class="text-lg text-gray-600 dark:text-gray-300 leading-relaxed">
          {t("hero_subtitle")}
        </p>

        <!-- Botones -->
        <div class="flex flex-col sm:flex-row gap-4 mt-6">
          <a
            href="https://wa.me/5352887847?text=Hola,%20me%20gustaría%20más%20información%20sobre%20las%20excursiones."
            target="_blank"
            rel="noopener noreferrer"
            class="px-6 py-3 bg-gradient-to-r from-blue-600 to-cyan-600 hover:from-blue-700 hover:to-cyan-700 text-white font-medium rounded-lg text-center shadow-md hover:shadow-lg transform hover:scale-105 transition-all duration-200 flex items-center justify-center"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.132.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347z"
              ></path>
            </svg>
            {t("whatsapp")}
          </a>
        </div>
      </div>

      <!-- Galería derecha (5 fotos) -->
      <!-- Galería: Solo visible en desktop (lg+) -->

      <div class="hidden lg:grid grid-cols-4 grid-rows-4 gap-4">
        <div class="col-span-2 row-span-2">
          <img
            src={images[0].src}
            alt={images[0].alt}
            class="w-full rounded-xl object-cover shadow-lg hover:shadow-xl transition-shadow duration-300 h-full"
          />
        </div>
        <div class="col-span-2 row-span-2 col-start-3">
          <img
            src={images[1].src}
            alt={images[1].alt}
            class="w-full rounded-xl object-cover shadow-lg hover:shadow-xl transition-shadow duration-300 h-full"
          />
        </div>
        <div class="row-span-2 row-start-3">
          <img
            src={images[2].src}
            alt={images[2].alt}
            class="w-full rounded-xl object-cover shadow-lg hover:shadow-xl transition-shadow duration-300 h-full"
          />
        </div>
        <div class="col-span-2 row-span-2 row-start-3">
          <img
            src={images[3].src}
            alt={images[3].alt}
            class="w-full rounded-xl object-cover shadow-lg hover:shadow-xl transition-shadow duration-300 h-full"
          />
        </div>
        <div class="row-span-2 col-start-4 row-start-3">
          <img
            src={images[4].src}
            alt={images[4].alt}
            class="w-full rounded-xl object-cover shadow-lg hover:shadow-xl transition-shadow duration-300 h-full"
          />
        </div>
      </div>
    </div>

    <!-- Características esenciales (una sola fila) -->
    <div class="mt-12 bg-white dark:bg-gray-800 rounded-2xl shadow-md border border-blue-100 dark:border-gray-700 p-6">
  <div class="flex flex-col sm:flex-row items-center justify-center gap-4 sm:gap-6 text-sm sm:text-base">
    {features.map((feature, index) => (
      <div class="flex items-center gap-2">
        <div class="w-1.5 h-1.5 bg-blue-500 rounded-full"></div>
        <span class="text-gray-800 dark:text-gray-200 font-medium">
          {feature.text}
        </span>
        {/* Separador solo si no es el último */}
        {index < features.length - 1 && (
          <div class="hidden sm:block w-px h-4 bg-gray-300 dark:bg-gray-600 mx-4"></div>
        )}
      </div>
    ))}
  </div>
</div>
  </div>
</section>

