---
import { Image } from "astro:assets";

interface Props {
  images: string[];
  lang: string;
}

const { images, lang } = Astro.props;
---

<div class="mb-8 lg:mb-12">
  <div
    class="slider-frame max-w-full mx-auto overflow-hidden rounded-xl shadow-lg"
  >
    <ul class="flex w-[400%] animate-slide">
      {
        images.map((image) => (
          <li class="w-full">
            <Image
              src={image}
              alt={lang==="en" ? "Panoramic view of Havana" : "Панорамный вид на Гавану"}
              width={1200} 
              height={500} 
              class="w-full h-64 sm:h-80 md:h-96 lg:h-[500px] object-cover"
              format="webp"
            />
          </li>
        ))
      }
    </ul>
  </div>
</div>

<style>
  @keyframes slide {
    0% {
      margin-left: 0;
    }
    20% {
      margin-left: 0;
    }
    25% {
      margin-left: -100%;
    }
    45% {
      margin-left: -100%;
    }
    50% {
      margin-left: -200%;
    }
    70% {
      margin-left: -200%;
    }
    75% {
      margin-left: -300%;
    }
    100% {
      margin-left: -300%;
    }
  }

  .animate-slide {
    animation: slide 20s infinite alternate ease-in-out;
  }
</style>
